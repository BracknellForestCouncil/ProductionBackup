/**
 * Implements hook_install().
 */
function bracknell_feature_twitter_install() {
  // Set message to avoid PHPCS error due to empty install hook.
  drupal_set_message('The install hook for the bracknell_feature_twitter module is empty. It should either do something useful or be removed.', 'error');
}

/**
 * Implements hook_uninstall().
 */
function bracknell_feature_twitter_uninstall() {
  // Set message to avoid PHPCS error due to empty uninstall hook.
  drupal_set_message('The uninstall hook for the bracknell_feature_twitter module is empty. It should either do something useful or be removed.', 'error');
}
