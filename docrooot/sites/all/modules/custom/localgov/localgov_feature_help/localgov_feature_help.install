/**
 * Implements hook_install().
 */
function localgov_feature_help_install() {
  // Set message to avoid PHPCS error due to empty install hook.
  drupal_set_message('The install hook for the localgov_feature_help module is empty. It should either do something useful or be removed.', 'error');
}

/**
 * Implements hook_uninstall().
 */
function localgov_feature_help_uninstall() {
  // Set message to avoid PHPCS error due to empty uninstall hook.
  drupal_set_message('The uninstall hook for the localgov_feature_help module is empty. It should either do something useful or be removed.', 'error');
}
