/**
 * Implements hook_install().
 */
function localgov_content_article_install() {
  // Set message to avoid PHPCS error due to empty install hook.
  drupal_set_message('The install hook for the localgov_content_article module is empty. It should either do something useful or be removed.', 'error');
}

/**
 * Implements hook_uninstall().
 */
function localgov_content_article_uninstall() {
  // Set message to avoid PHPCS error due to empty uninstall hook.
  drupal_set_message('The uninstall hook for the localgov_content_article module is empty. It should either do something useful or be removed.', 'error');
}
